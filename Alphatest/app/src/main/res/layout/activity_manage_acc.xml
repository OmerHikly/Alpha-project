<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layoutDirection="rtl"
    tools:context=".ManageAcc">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#62C2CC"
        android:scrollbarSize="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.666"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ConfirmUsers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="Confirm_users"
            android:background="#007489"
            android:text="אשר משתמשים חדשים"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="Watch_users"
            android:text="משתמשים"
            android:background="#007489"
            android:textSize="15dp" />


    </LinearLayout>

<EditText
    android:id="@+id/SearchText"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:ems="10"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:inputType="textPersonName"
    android:hint="חפש משתמשים"
    />
    
    
    
    <ListView
        android:id="@+id/User_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:focusableInTouchMode="false" />
</LinearLayout> 